pp_def 'Cpow',
	Pars => 'a(m=2); b(m=2); [o]c(m=2)',
        GenericTypes => [F,D],
        Doc => 'complex C<pow()> (C<**>-operator)',
        Code => q^
           $GENERIC() ar = $a(m=>0), ai = $a(m=>1);
           $GENERIC() br = $b(m=>0), bi = $b(m=>1);

           double logr, logi, x, y;
           double  s, c;

           CLOG (ar, ai, logr, logi);
           x = exp (logr*br - logi*bi);
           y =      logr*bi + logi*br;

           SINCOS (y, s, c);
           $c(m=>0) = x * c;
           $c(m=>1) = x * s;
        ^
;

