[%  WRAPPER splash/frame 
            width  = "100%"
%]

    [% # default panel style
       INCLUDE splash/panel 
               content = 'First Panel'
    %]

    [% # specify "select" style, tweak alignment
       INCLUDE splash/panel
               style   = splash.style.select
	       align   = 'center'
	       content = 'Second Panel'
    %]

    [% # specify options directly
       INCLUDE splash/panel 
               col     = 'grey50'
	       pad     = 12
               align   = 'right'
	       content = 'Third Panel'
    %]

[% END %]