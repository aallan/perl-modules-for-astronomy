#
# master slapd config -- for testing
#
include		./data/slapd.at.conf
include		./data/slapd.oc.conf
schemacheck	off

#######################################################################
# ldbm database definitions
#######################################################################

database	ldbm
suffix		"$BASEDN"
directory	$TESTDB
rootdn		"$MANAGERDN"
rootpw		$PASSWD
index		cn,sn,uid	pres,eq,approx
index		default		none
lastmod		on
