#!/local/bin/perl -w

use Tk::AstroCatalog;
use Tk;

my $MW = new MainWindow;
$MW->withdraw;

my $Cat = new Tk::AstroCatalog( $MW,
			      -addCmd => sub {
				my $arr = shift;
				my $c = $arr->[-1];
				
				print $c->status;
				
			      },
			      -upDate=> sub {print "Updated"},
			      -transient => 0);

MainLoop;
exit;
